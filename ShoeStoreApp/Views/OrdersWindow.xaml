<Window x:Class="ShoeStoreApp.Views.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список заказов" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Заказы" FontSize="20" FontWeight="Bold"/>
            <Button x:Name="BtnAddOrder" Content="Добавить заказ" Margin="20,0,0,0" Click="BtnAddOrder_Click" Background="#00FA9A"/>
        </StackPanel>

        <DataGrid x:Name="DgOrders" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="10"
                  MouseDoubleClick="DgOrders_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding OrderID}"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding OrderDate, StringFormat=d}"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding OrderStatus.OrderStatusName}"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding User.UserSurname}"/>
                <DataGridTextColumn Header="Код получения" Binding="{Binding OrderGetCode}"/>
            </DataGrid.Columns>

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить заказ" Click="MenuItemDeleteOrder_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Window>