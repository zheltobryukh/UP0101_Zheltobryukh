<Window x:Class="ShoeStoreApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ООО Обувь - Каталог" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/Icon.ico">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#7FFF00" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/Resources/logo.jpg" Height="50"/>
                <TextBlock Grid.Column="1" Text="Каталог товаров" FontSize="24" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="20,0" FontFamily="Times New Roman"/>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="TxtUserName" Text="Гость" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button Content="Выход" Click="BtnLogout_Click" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" x:Name="PanelControls">
            <StackPanel Margin="0,0,15,0">
                <TextBlock Text="Поиск"/>
                <TextBox x:Name="TxtSearch" Width="200" TextChanged="TxtSearch_TextChanged"/>
            </StackPanel>

            <StackPanel Margin="0,0,15,0">
                <TextBlock Text="Сортировка"/>
                <ComboBox x:Name="CmbSort" Width="150" SelectionChanged="CmbSort_SelectionChanged">
                    <ComboBoxItem Content="Без сортировки" Tag="None"/>
                    <ComboBoxItem Content="Цена: по возрастанию" Tag="PriceAsc"/>
                    <ComboBoxItem Content="Цена: по убыванию" Tag="PriceDesc"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="0,0,15,0">
                <TextBlock Text="Производитель"/>
                <ComboBox x:Name="CmbFilter" Width="150" SelectionChanged="CmbFilter_SelectionChanged"/>
            </StackPanel>

            <Button x:Name="BtnAddProduct" Content="Добавить товар" Click="BtnAddProduct_Click" 
                    Visibility="Collapsed" Margin="10,15,0,0" VerticalAlignment="Top" Padding="10,5" Background="#00FA9A"/>
            <Button x:Name="BtnOrders" Content="Заказы" Click="BtnOrders_Click" 
                    Visibility="Collapsed" Margin="10,15,0,0" VerticalAlignment="Top" Padding="10,5"/>
        </StackPanel>

        <ListView x:Name="LvProducts" Grid.Row="2" ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                  BorderThickness="0" MouseDoubleClick="LvProducts_MouseDoubleClick">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#7FFF00" BorderThickness="1" CornerRadius="5" Margin="5" Padding="10"
                            Background="{Binding BackgroundColor}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="{Binding ImagePath}" Stretch="Uniform" Height="120" Margin="0,0,10,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock TextWrapping="Wrap" FontSize="16" FontWeight="Bold" FontFamily="Times New Roman">
                                    <Run Text="{Binding CategoryNameText, Mode=OneWay}"/>
                                    <Run Text=" | "/>
                                    <Run Text="{Binding ProductName, Mode=OneWay}"/>
                                </TextBlock>

                                <TextBlock Text="{Binding ProductDescription}" TextWrapping="Wrap" MaxHeight="40" Margin="0,2" Foreground="Gray"/>

                                <TextBlock Margin="0,2">
                                    <Run Text="Производитель: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding ManufacturerNameText, Mode=OneWay}"/>
                                </TextBlock>

                                <TextBlock Margin="0,2">
                                    <Run Text="Поставщик: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding SupplierNameText, Mode=OneWay}"/>
                                </TextBlock>

                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="Цена: " FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding OriginalPriceText, Mode=OneWay}" 
                                               TextDecorations="Strikethrough" Foreground="Red" Margin="5,0"
                                               Visibility="{Binding HasDiscount, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <TextBlock Text="{Binding FinalPriceText, Mode=OneWay}" FontWeight="Bold"/>
                                </StackPanel>

                                <TextBlock Margin="0,2">
                                    <Run Text="Единица измерения: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding UnitNameText, Mode=OneWay}"/>
                                </TextBlock>

                                <TextBlock Margin="0,2">
                                    <Run Text="Количество на складе: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding ProductQuantityInStock}"/>
                                </TextBlock>
                            </StackPanel>

                            <TextBlock Grid.Column="2" 
                                       Text="{Binding ProductDiscountAmount, StringFormat='Размер скидки {0:0}%', Mode=OneWay}" 
                                       FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0"
                                       Visibility="{Binding HasDiscount, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </Grid>

                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить товар" Click="MenuItemDelete_Click" 
                                          Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </ContextMenu>
                        </Border.ContextMenu>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock x:Name="TxtStatusCount" Text="0 из 0 товаров"/>
        </StackPanel>
    </Grid>
</Window>