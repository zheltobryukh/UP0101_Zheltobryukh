<Window x:Class="ShoeStoreApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ООО Обувь - Список товаров" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Background="White"
        Icon="/Resources/Icon.ico">

    <Window.Resources>
        <Style x:Key="ProductCardStyle" TargetType="Border">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#7FFF00" 
                BorderThickness="0,0,0,2" 
                BorderBrush="#00FA9A">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center" 
                           Margin="20,0">
                    <Image Source="/Resources/logo.jpg" 
                           Height="60" 
                           Stretch="Uniform"
                           Margin="0,0,15,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="ООО Обувь" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="Black"
                                  FontFamily="Times New Roman"/>
                        <TextBlock Text="Каталог товаров" 
                                  FontSize="16" 
                                  Foreground="#333333"
                                  FontFamily="Times New Roman"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right" 
                           Margin="20,0">
                    <TextBlock x:Name="txtUserInfo" 
                              Text="Гость" 
                              FontSize="18" 
                              Foreground="Black" 
                              HorizontalAlignment="Right"
                              FontWeight="Bold"
                              FontFamily="Times New Roman"/>
                    <TextBlock x:Name="txtUserRole" 
                              Text="Гостевой режим" 
                              FontSize="14" 
                              Foreground="#333333" 
                              HorizontalAlignment="Right"
                              Margin="0,2,0,0"
                              FontFamily="Times New Roman"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" 
                Background="White" 
                BorderThickness="0,0,0,1" 
                BorderBrush="#CCCCCC">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center"
                           x:Name="pnlSearchPanel"
                           Visibility="Collapsed">
                    <TextBlock Text="Поиск:" 
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"
                              FontFamily="Times New Roman"/>
                    <TextBox x:Name="txtSearch" 
                            Width="300" 
                            TextChanged="TxtSearch_TextChanged"
                            VerticalAlignment="Center"
                            FontFamily="Times New Roman"/>

                    <TextBlock Text="Сортировка:" 
                              VerticalAlignment="Center" 
                              Margin="20,0,10,0"
                              FontFamily="Times New Roman"/>
                    <ComboBox x:Name="cmbSort" 
                             Width="200" 
                             SelectionChanged="CmbSort_SelectionChanged"
                             VerticalAlignment="Center"
                             FontFamily="Times New Roman"/>

                    <TextBlock Text="Фильтр:" 
                              VerticalAlignment="Center" 
                              Margin="20,0,10,0"
                              FontFamily="Times New Roman"/>
                    <ComboBox x:Name="cmbFilter" 
                             Width="200" 
                             SelectionChanged="CmbFilter_SelectionChanged"
                             VerticalAlignment="Center"
                             FontFamily="Times New Roman"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center">
                    <Button x:Name="btnManageProducts" 
                           Content="Управление товарами" 
                           Click="BtnManageProducts_Click"
                           Visibility="Collapsed"
                           Background="#00FA9A"
                           FontFamily="Times New Roman"/>

                    <Button Content="Выход" 
                           Click="BtnLogout_Click"
                           Background="#7FFF00"
                           FontFamily="Times New Roman"/>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="2" 
                     VerticalScrollBarVisibility="Auto" 
                     Margin="10"
                     Background="White">
            <ItemsControl x:Name="itemsProducts">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="productCard" 
                                Style="{StaticResource ProductCardStyle}" 
                                Width="350" 
                                Height="250">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Background="#F0F0F0" 
                                       CornerRadius="5"
                                       Margin="0,0,10,0">
                                    <Image Source="{Binding ImagePath}" 
                                          Stretch="UniformToFill"/>
                                </Border>

                                <StackPanel Grid.Column="1">
                                    <TextBlock FontWeight="Bold" 
                                              FontSize="14" 
                                              TextWrapping="Wrap"
                                              Margin="0,0,0,5"
                                              FontFamily="Times New Roman">
                                        <Run Text="{Binding CategoryNameText}"/>
                                        <Run Text=" | "/>
                                        <Run Text="{Binding ProductName}"/>
                                    </TextBlock>

                                    <TextBlock Text="{Binding ProductDescription}" 
                                              FontSize="11" 
                                              Foreground="Gray" 
                                              TextWrapping="Wrap"
                                              MaxHeight="35"
                                              Margin="0,0,0,8"
                                              FontFamily="Times New Roman"/>

                                    <TextBlock FontSize="12" Margin="0,0,0,3" FontFamily="Times New Roman">
                                        <Run Text="Производитель:" FontWeight="SemiBold"/>
                                        <Run Text="{Binding ManufacturerNameText}"/>
                                    </TextBlock>

                                    <TextBlock FontSize="12" Margin="0,0,0,3" FontFamily="Times New Roman">
                                        <Run Text="Поставщик:" FontWeight="SemiBold"/>
                                        <Run Text="{Binding SupplierNameText}"/>
                                    </TextBlock>

                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,3">
                                        <TextBlock FontSize="14" 
                                                  Foreground="Red" 
                                                  TextDecorations="Strikethrough"
                                                  Margin="0,0,10,0"
                                                  FontFamily="Times New Roman">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Text" Value="{Binding OriginalPriceText}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Text="{Binding FinalPriceText}" 
                                                  FontSize="16" 
                                                  FontWeight="Bold" 
                                                  Foreground="Black"
                                                  FontFamily="Times New Roman"/>
                                    </StackPanel>

                                    <TextBlock FontSize="12" Margin="0,0,0,3" FontFamily="Times New Roman">
                                        <Run Text="Единица измерения:" FontWeight="SemiBold"/>
                                        <Run Text="{Binding UnitNameText}"/>
                                    </TextBlock>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Количество на складе:" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="12"
                                                  Margin="0,0,5,0"
                                                  FontFamily="Times New Roman"/>
                                        <TextBlock Text="{Binding ProductQuantityInStock}" 
                                                  FontSize="12"
                                                  FontFamily="Times New Roman"/>
                                    </StackPanel>
                                </StackPanel>

                                <Border Grid.Column="1" 
                                       Background="#E74C3C" 
                                       CornerRadius="3" 
                                       Padding="5,2"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       Margin="0,-5,-5,0">
                                    <TextBlock FontSize="12" 
                                              FontWeight="Bold" 
                                              Foreground="White"
                                              FontFamily="Times New Roman">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasDiscount}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Setter Property="Text">
                                                            <Setter.Value>
                                                                <Binding Path="ProductDiscountAmount" StringFormat="-{0:F0}%"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>

                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding HasLargeDiscount}" Value="True">
                                <Setter TargetName="productCard" Property="Background" Value="#2E8B57"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding IsInStock}" Value="False">
                                <Setter TargetName="productCard" Property="Background" Value="#87CEEB"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>