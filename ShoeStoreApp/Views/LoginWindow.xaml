<Window x:Class="ShoeStoreApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему - Магазин обуви" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" 
                    Background="#4682B4" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <TextBlock Text="🥾 МАГАЗИН ОБУВИ" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       Margin="20"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10" 
                Margin="40,20" 
                Padding="30"
                BorderBrush="#CCCCCC"
                BorderThickness="1">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Авторизация" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <TextBlock Text="Логин:" 
                           Margin="0,5"/>
                <TextBox x:Name="txtLogin" 
                         MinHeight="35"
                         FontSize="14"/>

                <TextBlock Text="Пароль:" 
                           Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtPassword" 
                             MinHeight="35"
                             FontSize="14"
                             KeyDown="TxtPassword_KeyDown"/>

                <Button Content="Войти" 
                        Click="BtnLogin_Click" 
                        Margin="0,20,0,0"
                        Height="40"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="#4682B4"/>

                <Button Content="Войти как гость" 
                        Click="BtnGuest_Click" 
                        Margin="0,10,0,0"
                        Height="35"
                        FontSize="14"
                        Background="#95A5A6"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <TextBlock Text="© 2024 Магазин обуви" 
                       FontSize="12" 
                       Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
