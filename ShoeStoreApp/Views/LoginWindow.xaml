<Window x:Class="ShoeStoreApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему - ООО Обувь" 
        Height="650" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="650"
        MinWidth="700"
        Background="White"
        Icon="/Resources/shoe.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#7FFF00">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="/Resources/logo.jpg" 
                       Height="80" 
                       Stretch="Uniform"
                       Margin="0,0,0,10"/>
                <TextBlock Text="ООО Обувь" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="Black" 
                           HorizontalAlignment="Center"
                           FontFamily="Times New Roman"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10" 
                Margin="80,40" 
                Padding="60"
                BorderBrush="#7FFF00"
                BorderThickness="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Авторизация" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,40"
                               FontFamily="Times New Roman"/>

                    <TextBlock Text="Логин:" 
                               FontSize="16"
                               Margin="0,10,0,8"
                               FontFamily="Times New Roman"/>
                    <TextBox x:Name="txtLogin" 
                             MinHeight="45"
                             FontSize="16"
                             Padding="12,10"
                             FontFamily="Times New Roman"/>

                    <TextBlock Text="Пароль:" 
                               FontSize="16"
                               Margin="0,25,0,8"
                               FontFamily="Times New Roman"/>
                    <PasswordBox x:Name="txtPassword" 
                                 MinHeight="45"
                                 FontSize="16"
                                 Padding="12,10"
                                 KeyDown="TxtPassword_KeyDown"
                                 FontFamily="Times New Roman"/>

                    <Button Content="Войти" 
                            Click="BtnLogin_Click" 
                            Margin="0,40,0,0"
                            Height="50"
                            FontSize="18"
                            FontWeight="Bold"
                            Background="#00FA9A"
                            FontFamily="Times New Roman"/>

                    <Button Content="Войти как гость" 
                            Click="BtnGuest_Click" 
                            Margin="0,20,0,0"
                            Height="45"
                            FontSize="16"
                            Background="#7FFF00"
                            FontFamily="Times New Roman"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Background="White">
            <TextBlock Text=" ООО Обувь" 
                       FontSize="13" 
                       Foreground="Gray"
                       FontFamily="Times New Roman"/>
        </StackPanel>
    </Grid>
</Window>